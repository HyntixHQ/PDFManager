<?xml version="1.0" encoding="utf-8"?>
<!--
   Data extraction rules for Android 12 (API 31) and above.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include database for recent files and bookmarks -->
        <include domain="database" path="pdf_viewer_database"/>
        <include domain="database" path="pdf_viewer_database-shm"/>
        <include domain="database" path="pdf_viewer_database-wal"/>
        
        <!-- Include DataStore preferences -->
        <include domain="file" path="datastore/settings.preferences_pb"/>
    </cloud-backup>
    <device-transfer>
        <!-- Include database for recent files and bookmarks -->
        <include domain="database" path="pdf_viewer_database"/>
        <include domain="database" path="pdf_viewer_database-shm"/>
        <include domain="database" path="pdf_viewer_database-wal"/>
        
        <!-- Include DataStore preferences -->
        <include domain="file" path="datastore/settings.preferences_pb"/>
    </device-transfer>
</data-extraction-rules>